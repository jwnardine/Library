<html>
<head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/styles.css'>
    <title>Library</title>
</head>
<body>
    <div class='container'>
        <h1>Authors</h1>

        {% if authors is not empty %}
            <p>Here are all your authors:</p>
            <ul>
                {% for author in authors %}
                    <li><a href="/authors/{{ author.getId }}">{{ author.getAuthor_Name }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/authors' method='post'>
            <label for='author_name'>Author name</label>
            <input id='author_name' name='author_name' type='text'>

            <button class="btn-info" type='submit'>Add author</button>
        </form>
        <form action='/delete_authors' method='post'>
            <button class="btn-danger" type='submit'>Clear</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
</body>
</html>
